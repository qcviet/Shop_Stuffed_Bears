RewriteEngine On

# Handle trailing slashes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# Ensure index.php is the default file
DirectoryIndex index.php

# Route specific URLs to appropriate pages
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route category pages
RewriteRule ^teddy-bears/?$ index.php?page=teddy-bears [L,QSA]
RewriteRule ^blind-box/?$ index.php?page=blind-box [L,QSA]
RewriteRule ^gifts/?$ index.php?page=gifts [L,QSA]
RewriteRule ^cartoons/?$ index.php?page=cartoons [L,QSA]
RewriteRule ^accessories/?$ index.php?page=accessories [L,QSA]

# Route static pages
RewriteRule ^about/?$ index.php?page=about [L,QSA]
RewriteRule ^contact/?$ index.php?page=contact [L,QSA]
RewriteRule ^help/?$ index.php?page=help [L,QSA]

# Route user pages
RewriteRule ^login/?$ index.php?page=login [L,QSA]
RewriteRule ^register/?$ index.php?page=register [L,QSA]
RewriteRule ^profile/?$ index.php?page=profile [L,QSA]
RewriteRule ^orders/?$ index.php?page=orders [L,QSA]
RewriteRule ^cart/?$ index.php?page=cart [L,QSA]

# Route search
RewriteRule ^search/?$ index.php?page=search [L,QSA]

# Route admin panel
RewriteRule ^admin/?$ admin/index.php [L,QSA]
RewriteRule ^admin/(.*)$ admin/$1 [L,QSA]

# Route social media (redirect to external sites)
RewriteRule ^social/facebook/?$ https://facebook.com/shopgauyeu [L,R=301]
RewriteRule ^social/instagram/?$ https://instagram.com/shopgauyeu [L,R=301]
RewriteRule ^social/tiktok/?$ https://tiktok.com/@shopgauyeu [L,R=301]
RewriteRule ^social/twitter/?$ https://twitter.com/shopgauyeu [L,R=301]

# Handle 404 errors gracefully
ErrorDocument 404 /index.php

# Enable compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Set cache headers for static assets
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
</IfModule>
